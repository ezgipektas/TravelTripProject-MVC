@using TravelTripProject.Models.Class
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" style="width:300px; height:150px;" />
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama.Substring(0,85)</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını oku >></span></a></p>
        </div>
    </div>
    }
    @Html.Action("Partial2","Default")

    
    <div class="clear"></div>
</div>