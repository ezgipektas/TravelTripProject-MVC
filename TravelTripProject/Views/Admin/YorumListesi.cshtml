@using TravelTripProject.Models.Class
@model List<Yorumlar>

@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.KullaniciAdi</td>
        <td>@item.Mail</td>
        <td>@item.Yorum</td>
        <td>@item.Blog.Baslik</td>
        <td><a href="/Admin/YORUMSIL/@item.ID" class="btn btn-danger">SİL</a></td>
        <td><a href="/Admin/YorumGetir/@item.ID" class="btn btn-success">GÜNCELLE</a></td>
    </tr>
    }
</table>

